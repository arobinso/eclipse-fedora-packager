<plugin>
   <extension-point id="vcsContribution" name="VCS interaction" schema="schema/vcsContribution.exsd"/>
   
   <extension point="org.eclipse.core.expressions.definitions">
      <definition id="org.fedoraproject.eclipse.packager.gitproject">
         <iterate ifEmpty="false">
            <adapt type="org.eclipse.core.resources.IResource">
               <test
                  args="org.eclipse.team.core.repository,org.eclipse.egit.core.GitProvider"
                  property="org.eclipse.core.resources.projectPersistentProperty">
               </test>
            </adapt>
         </iterate>
      </definition>
      <definition
            id="org.fedoraproject.eclipse.packager.project">
         <and>
            <reference
                  definitionId="org.fedoraproject.eclipse.packager.gitproject">
            </reference>
            <!--
            <reference
                  definitionId="org.fedoraproject.eclipse.packager.project.FedoraPackagerProvider">
            </reference>
            -->
         </and>
      </definition>
      <definition
            id="org.fedoraproject.eclipse.packager.project.FedoraPackagerProvider">
         <iterate
               ifEmpty="true"> <!-- TODO: Create persistent property and set this to false --> 
            <adapt
                  type="org.eclipse.core.resources.IResource">
               <test
                     args="org.fedoraproject.eclipse.packager.properties.FedoraPackagerProject"
                     property="org.eclipse.core.resources.projectPersistentProperty">
               </test>
            </adapt>
         </iterate>
      </definition>
   </extension>

   <extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <menu
               icon="icons/fedora16x16.png"
               id="org.eclipse.fedoraproject.packager.main"
               label="%menu.label.0">
            <separator
                  name="org.fedoraproject.eclipse.packager.kojisep"
                  visible="false">
            </separator>
            <separator
                  name="org.fedoraproject.eclipse.packager.bodhisep"
                  visible="true">
            </separator>
            
            <separator
                  name="org.fedoraproject.eclipse.packager.cvssep"
                  visible="true">
            </separator>
            
         </menu>
      </menuContribution>
      <menuContribution
               locationURI="popup:org.eclipse.fedoraproject.packager.main?before=org.fedoraproject.eclipse.packager.cvssep">
             <menu
                  label="%menu.label.1"
                  mnemonic="%menu.mnemonic.0">
               <visibleWhen
                     checkEnabled="false">
                  <or>
                     <with
                           variable="activeMenuSelection">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.project">
                        </reference>
                     </with>
                     <with
                           variable="activeMenuEditorInput">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.project">
                        </reference>
                     </with>
                  </or>
               </visibleWhen>
               <command
                     commandId="org.fedoraproject.eclipse.packager.UploadCommand"
                     label="%command.label.2"
                     mnemonic="%command.mnemonic.2"
                     style="push">
         	   </command>
               <command
                     commandId="org.fedoraproject.eclipse.packager.NewSourcesCommand"
                     label="%command.label.3"
                     mnemonic="%command.mnemonic.3"
                     style="push">
               </command>
            </menu>
         <command
                  commandId="org.fedoraproject.eclipse.packager.DownloadCommand"
                  label="%command.label.4"
                  mnemonic="%command.mnemonic.4"
                  
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <or>
                     <with
                           variable="activeMenuSelection">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.project">
                        </reference>
                     </with>
                     <with
                           variable="activeMenuEditorInput">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.project">
                        </reference>
                     </with>
                  </or>
               </visibleWhen>
         </command>
       </menuContribution>
    </extension>
    
    <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.fedoraproject.eclipse.packager.handlers.DownloadHandler"
            id="org.fedoraproject.eclipse.packager.DownloadCommand"
            name="%command.name.9">
      </command>
      <command
            defaultHandler="org.fedoraproject.eclipse.packager.handlers.UploadHandler"
            id="org.fedoraproject.eclipse.packager.UploadCommand"
            name="%command.name.6">
      </command>
      <command
            defaultHandler="org.fedoraproject.eclipse.packager.handlers.NewSourcesHandler"
            id="org.fedoraproject.eclipse.packager.NewSourcesCommand"
            name="%command.name.7">
      </command>
    </extension>
    
    <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.fedoraproject.eclipse.packager.preferences.LookasidePreferencePage"
            id="org.fedoraproject.eclipse.packager.preferences"
            name="%preferencepage.name"/>
   </extension>
    <extension
          point="org.eclipse.equinox.preferences.preferences">
       <initializer
             class="org.fedoraproject.eclipse.packager.preferences.PackagerPluginPreferenceInitializer">
       </initializer>
    </extension>

</plugin>
